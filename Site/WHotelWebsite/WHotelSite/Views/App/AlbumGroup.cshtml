@section scripts{
    <script src="~/Content/js/framework/vue.min.js"></script>
<script src="~/Content/js/framework/jquery.lazyload.min.js"></script>
    <script src="~/Content/js/app/AlbumGroup.js?v=@(Helpers.curAppVer())"></script>
}
