    //    //当平日价找不到或者价格为0时，去查询非平日价（周末价）
    //    pingri = coupondetail.package.PackagePrice.Find(p => p.Type != 0);
    //    if (pingri != null && pingri.Price > 0)
    //    {
    //        priceLabel = "周末";
    //        sellPrice = pingri.Price;
    //    }
    //}

    //查询券的状态
    BuyCouponCheckNumResult buyResult = ViewBag.BuyResult;

