    <div class="main" onclick="goto('hotel/@(package.HotelID)')">
        <div class="hotel">
            <div class="tit">查看酒店详情</div>
        </div>
    </div>

    @if (false && userid == "0")
    {
        <div class="phonePanel">
            <div class="rowPanel">
                <div class="left">手机号</div>
                <div class="right">
                    <input type="text" id="userPhone" class="userPhone" placeholder="请输入11位手机号" />
