    @if (isFirstWxsign)
    {
        <div class="wxSignOk">
            <div class="tip-img"><img src="http://whfront.b0.upaiyun.com/app/img/coupon/img_chenggong.png" alt="" /></div>
            <div class="tip">您已成功预约</div>
            <div class="goshop">立即进入抢购</div>
            <div class="goshop-timer" data-count="3">3s后将自动跳转</div>
        </div>
