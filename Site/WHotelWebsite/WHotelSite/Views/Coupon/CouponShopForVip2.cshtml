    </style>
}

@if (canreserve == 0)
{
    <div id ="step3" style="display:block;">
        <div class="vip-top2">
            <img src="http://whfront.b0.upaiyun.com/app/img/coupon/vip/vip-reserve-over-bg.png" alt="" />
        </div>
        @if (!isApp)
        {
            <div class="vip-bottom2">
