}
else 
{
    <div id="step1" style="display:block;">
        <div class="vip-top">
            <img src="http://whfront.b0.upaiyun.com/app/img/coupon/vip/vip-brief-bg.jpg" alt="" />
        </div>
        @if (userid == "0")
        {
            <div class="vip-phone">
