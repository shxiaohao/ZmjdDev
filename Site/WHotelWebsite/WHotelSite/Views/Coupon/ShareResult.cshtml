@{
    Layout = null;
    DateTime date = DateTime.Now;
    var cssSuffix = string.Format("?suffix={0}{1}{2}{3}{4}", date.Year, date.Month, date.Day, date.Hour, date.Minute);
}

<html>

<head>
    <meta charset="utf-8">
    <title>领取成功</title>
    <link rel="stylesheet" href="~/Content/css/reset.css" />
    <link rel="stylesheet" href="~/Content/css/css_chaikaihongbao60.css@(cssSuffix)" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta name="format-detection" content="telephone=no">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    
    <style>
        html, body {
            background-size: cover;
            position: relative;
            overflow: scroll;
        }

        .notice06 p {
            line-height: 1.5em;
        }

        .container .content {
            display: block;
            top: 10%;
            width: 100%;
            position: absolute;
            z-index: 1;
        }

        .mhb04 {
            margin: 10% 10% 10% 10%;
            float: left;
            width: 80%;
        }

        span.notice06 {
            float: left;
            margin-top: -30%;
            font-size: .8em;
            color: rgb(249, 215, 166);
            margin-left: 10%;
            margin-right: 10%;
            width: 80%;
        }

        span.hb04 {
            float: left;
            width: 100%;
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="hb-bg">
            <img src="@Url.Content("~/Content/images/bg2.png")@(cssSuffix)" />
        </div>
        <div class="content" style="text-align:center;">
            <div class="mhb04">
                <span class="hb04"><img src="@Url.Content("~/Content/images/hb04.png")@(cssSuffix)"></span>
                <span class="notice06">
                    <p> 可到APP“我的钱包”中查看现金券</p>
                </span>
            </div>
        </div>
    </div>
</body>

</html>