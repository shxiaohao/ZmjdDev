                    <%_.each(_.find(citySuggest,function(i){return i.Group == '热门';}).List,function(o){%>
                    <li data-districtid="<%=o.DistrictId%>" data-lat="<%=o.Lat%>" data-lng="<%=o.Lng%>" data-sctype="2"><%=o.Name%>及周边</li>
                    <%})%>
                </ul>*@
                <ul class="tab clearfix">
