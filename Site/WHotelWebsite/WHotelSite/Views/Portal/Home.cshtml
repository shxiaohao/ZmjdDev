                                </div>
                                <div class="col-xs-2 hotelsumlink">
                                    <a href="@Url.Action("Detail", "Hotel", new { hotel = info.HotelId })"><img src="@Url.Content("~/content/images/hotelsumlink.png")" alt="" /></a>
