@model List<HJD.HotelServices.Contracts.SpecialDealPackageEntity>
@{
    Layout = null;
}
@{
    ViewBag.Title = "限时特惠";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>限时特惠-周末酒店</title>
    <link href="/content/css/bootstrap.css" rel="stylesheet">
    <link href="/content/css/xsth.css" rel="stylesheet">


    <script src="/content/js/bootstrap.js"></script>

    <script type="text/javascript">
        function goto(hotelid, hotelname) {
            _hmt.push(['_trackEvent', 'SpecialDeal', 'nav', hotelname, hotelid]);
            var url = "";
            if( "http" == "@(ViewBag.urlProtocol)" )
            {
                url = "http://m1.zmjiudian.com/" + hotelid;
            }
            else
            {
                url = "whotelapp://www.zmjiudian.com/hotel/ " + hotelid;
            }
            this.location = url;
        }
    </script>
</head>
<body class="hotellistpage">
    <div class="container mainbody">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">

                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <!-- 酒店列表 开始 -->
                        @foreach (HJD.HotelServices.Contracts.SpecialDealPackageEntity s in Model)
{
    <div class="row hotellist" onclick="goto(@(s.HotelId),'@(s.HotelName)')">
        <div class="col-sm-5 hotelpic">
            <a href="javascript:void(0)"><img src="@s.PicUrl" class="img-responsive" alt="" /></a>
            <div class="hotelname2">
                @s.HotelName
            </div>

        </div>
        <div class="col-sm-7 col-xs-12 hotelinfo" >
            <div class="titlehead hidden-xs"></div>
            <h5><span class="price11">￥<i>@s.Price</i></span>@s.Brief</h5>
            <h6>限@(s.CheckDate.Month)/@(s.CheckDate.Day) 入住，剩最后 <i>@s.RooCount</i> 套 </h6>
        </div>


    </div>
}
                        <!-- 酒店列表 结束 -->
                    </div>
                </div>

            </div>
            <div class="col-md-1">
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F3566e9570ddbe6722a51adedffbf065b' type='text/javascript'%3E%3C/script%3E"));
    </script>
</body>
</html>