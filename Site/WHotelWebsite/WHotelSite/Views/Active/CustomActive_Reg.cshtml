@using WHotelSite
@using WHotelSite.App_Code
@using WHotelSite.Params
@{
    var cssVersion = "190001010000";
    try
    {
        //var last = this.GetType().Assembly.Location;
        var last = System.Reflection.Assembly.GetExecutingAssembly().Location;
        var lastTime = System.IO.File.GetLastWriteTime(last);
        cssVersion = lastTime.ToString("yyyyMMddhhmm");
    }
    catch (Exception ex)
    {
    }

    InspectorRegisterParam param = ViewBag.param;

    ViewBag.Title = string.Format("安缦之夜");

    var aid = ViewBag.ActiveId;
    var phone = ViewBag.Phone;
    var showtype = ViewBag.ShowType;
    var customUser = ViewBag.CustomUser;

    var headImg = "http://whfront.b0.upaiyun.com/www/img/Active/custom/top-banner-anman2.png";
}
@section styles
{
    <style>
        
    </style>
}

<link href="~/Content/css/active/customactive.css?v=@cssVersion" rel="stylesheet" />
<div class="reg-body">
    <div class="head-panel"><img src="@(headImg)" alt="" /></div>
    @if (customUser != null)
    {
        <div class="result-panel">
            <div class="info">
                <img src="http://whfront.b0.upaiyun.com/www/img/Active/custom/page_ok_panel1.png" alt="" />
                <img src="http://whfront.b0.upaiyun.com/www/img/Active/custom/page_ok_panel2.png" alt="" />
            </div>
        </div>
    }
    else
    { 
        <div class="form-panel">
            <div class="middle">
                <div class="inp-div"><span class="lab">姓名：</span><input type="text" id="userName" class="inp" placeholder="" /></div>
                <div class="inp-div"><span class="lab"> 手机号：</span><input type="tel" id="userPhone" class="inp-phone" placeholder="" /></div>
                <div class="inp-div"><span class="lab">验证码：</span><input type="text" id="vCode" class="inp-code" placeholder="" /><button type="button" class="vCodeBtn">获取验证码</button></div>
                <div class="sub-div"><div class="submit">提交</div></div>
            </div>
        </div>
    }
</div>
<div class="reg-foot"><img src="http://whfront.b0.upaiyun.com/www/img/Active/custom/bottom-log-nanshufang2.png" alt="" /></div>

<input type="hidden" id="aid" value="@aid" />
<!--  -->
@section scripts
{
    <script src="~/Content/js/active/customactive.js?v=@cssVersion"></script>
    <script>
            window.isMobile = @WHotelSite.Utils.JSONEncode(WHotelSite.Utils.IsMobile());
            window.contentUrl = @Html.Raw(WHotelSite.Utils.JSONEncode(Url.Content("~/Content")));
            window.httpsWebUrl = @Html.Raw(WHotelSite.Utils.JSONEncode(System.Configuration.ConfigurationManager.AppSettings["HttpsWebSiteUrl"]));
    </script>
    <script>



    </script>
}
