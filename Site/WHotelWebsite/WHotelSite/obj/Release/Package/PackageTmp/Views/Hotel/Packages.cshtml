}

@section styles
{
    @Styles.Render("~/Content/css/calendar.css")
}

@section scripts
{
    @if (Utils.IsMobile()) {
        @Scripts.Render(
            "~/Content/js/iscroll-lite.js"
        )
    }
    else 
    {
        @Scripts.Render(
            "~/Content/js/ctrip_cquery.js",
            "~/Content/js/ctrip_calendar.js",
            "~/Content/js/bootbox.js"
