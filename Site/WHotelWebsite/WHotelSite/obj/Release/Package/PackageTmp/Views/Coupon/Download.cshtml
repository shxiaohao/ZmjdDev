            box-shadow: 0px 4px 4px 0px #ffb500 inset;
            border-radius: 5px;
            box-shadow: 0px 4px 4px 0px rgba(50, 50, 50, .3);
            text-shadow: 0 1px 1px #FFF08C;
        }
    </style>
    <style type="text/css">
        .sharediv {
            width: 100%;
            background: rgba(0, 0, 0, 0.8) none repeat scroll 0 0 !important;
            position: absolute;
            top: 0;
            z-index: 100;
            height: 100%;
            overflow: hidden;
        }

        .container .content {
            display: block;
            top: 5%;
            width: 100%;
            position: absolute;
            z-index: 1;
        }

            .container .content .hb-introduce {
             width: 100%;
             margin: 3% auto 0;
             color: rgba(255, 255, 255, .9);
             font-size: .8em;
            }

           .container .content .hb-introduce .aa2 {
            background: none;
            padding: 1.5em 0 0 0;
            border-radius: 0;
            margin: 0;
            line-height: 1.2em;
            color: rgba(144, 120, 78, 1);
            box-shadow: none;
            text-shadow: none;
            text-align: left;
            border-top: 1px solid #C5A060;
            margin-top: -1em;
            float: left;
                }

           .container .content .hb-introduce .aa2 p {
           text-indent: 2em;
                    }

        .hb-list {
            margin: 0 auto;
            width: 90%;
            background: #FFFFFF;
            padding: 1em 5% 1em 5%;
            color: rgb(255, 227, 183);
            text-align: center;
            float: left;
        }

        .list-number {
            border: 1px solid rgb(197, 160, 96);
            padding: 0% 5% 5% 5%;
            float: left;
            color: rgb(163, 23, 0);
            background-color: #FFFFFF;
            margin-bottom: 2em;
            margin-top: 1em;
            width: 90%;
        }

       .list-number p {
           margin-bottom: .5em;
           margin-top: -2em;
           background: rgb(255, 255, 255);
           width: 80px;
           color: rgb(126, 80, 0);
           text-shadow: none;
           line-height: 2em;
           font-size: .8em;
           width: 50%;
           margin: 0 auto;
           position: relative;
           top: -1em;
            }

       .list-number span {
           float: left;
           width: 100%;
            }

        p.hh1 {
            margin-bottom: .5em;
            margin-top: -2em;
            background: rgb(255, 255, 255);
            color: rgb(126, 80, 0);
            text-shadow: none;
            font-size: .8em;
            width: 30%;
            margin: 0 auto;
            position: relative;
            top: 0em;
            float: left;
            text-align: center;
            display: block;
            left: 33%;
            text-indent: 0px !important;
        }

        .congratulation {
            text-align: center;
            margin-top: 10%;
            margin-bottom: 3%;
        }

        .congratulation2 {
            z-index: 10;
            margin-top: -12em;
            margin-left: 2%;
            text-align: center;
            top: -2em;
            position: relative;
        }

        .congratulation2 p {
           text-align: center;
           color: rgb(195, 41, 38);
           margin-left: -.3em;
           font-weight: bold;
           z-index: 100;
           font-size: 3em;
           position: relative;
            }

        .content .cl {
          color: #ffd478;
          text-align: center;
          margin-top: .5em;
          font-size: .9em;
          text-shadow: 1px 1px 1px rgba(90, 90, 90, 0.5);
        }

        .blackbg {
            opacity: .9;
            background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
            height: 100%;
            z-index: 50;
            position: relative;
        }
    </style>
</head>
<body>
    <div id="divOne_1" style="display:none" onclick="return click_a('divOne_1')" class="blackbg">
        @*<img src="/Content/images/browserTip.png" class="img-responsive" alt="点击浏览器右上角下载App" />*@
        <img src="/Content/images/notice03.png" class="img-responsive" alt="点击浏览器右上角下载App" />
    </div>

    <div class="container hb-bg">
        <div class="content hb">
            <div class="congratulation"> <img src="/Content/images/hongbao/congratulations.png" width="160px;" height="80px"> </div>
            <img src="/Content/images/hongbao/hb03.png" width="75%" height="=330px">
            <div class="congratulation2">
                <p>￥0</p>
            </div>
            <div class="cl">
                <p style="">现金券已放入您的周末酒店APP账户</p>
                <p style="">18001801688</p>
            </div>
            <a id="downLoad" onclick="javascript:goto(&#39;auto&#39;); return false;" class="brook4">下载周末酒店APP</a>
        </div>
    </div>

    <div class="hb-list">
        <div class="list-number">
            <p>看朋友们手气如何</p>
        </div>
        <div class="hb-introduce">
            <p class="hh1">使用规则</p>
            <div class="aa2">
                <p> 1、使用您抢红包的手机号码注册登录“周末酒店”APP，进入“我的钱包”可查看到现金券。 </p>
                <p> 2、现金券有效期2年，在有效期内，您可以使用现金券抵扣您在周末酒店预订酒店的消费金额，享受额外优惠。 </p>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var appDownloadURL = "@Model.appDownloadURL";
        @((!Model.isInWeixin)?"this.location =  appDownloadURL;":"")
        function goto(app) {
            switch (app) {
                case "auto":
                    @if( Model.isIPhone)
                    {
                         if (Model.isInWeixin)
                         {
                             @Html.Raw("click_a('divOne_1');");
                         }
                         else
                         {
                             @Html.Raw( "window.location =\"" + Model.appleAppURL +"\";");
                         }
                    }
                    else
                    {
                        if (Model.isInWeixin)
                        {
                                @Html.Raw("click_a('divOne_1');");
                        }
                        else
                        {
                            @Html.Raw( "window.location =\"" + Model.androidAppURL +"\";");
                        }
                    }
                    break;

                case "apple":
                    @if (Model.isInWeixin)
                    {
                        @Html.Raw("click_a('divOne_1');");
                    }
                    else
                    {
                        @Html.Raw( "window.location =\"" + Model.appleAppURL +"\";");
                    }
                    break;
                case "android":
                    @if (Model.isInWeixin)
                    {
                         @Html.Raw("click_a('divOne_1');");
                    }
                    else
                    {
                       @Html.Raw( "window.location =\"" + Model.androidAppURL +"\";");
                    }
                    break;
            }
        }

        /***
        *功能：隐藏和显示div
        *参数divDisplay：html标签id
        ***/
        function click_a(divDisplay) {
            if (document.getElementById(divDisplay).style.display != "block") {
                document.getElementById(divDisplay).style.display = "block";
            }
            else {
                document.getElementById(divDisplay).style.display = "none";
            }
        }

    </script>
</body>
</html>