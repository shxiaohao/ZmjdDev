@helper BindOrderDetailOption(UrlHelper url, long orderId, long hotelId, long packageId, DateTime checkIn, DateTime checkOut, int orderState, string contact, string contactPhone, int roomCount, string note, int CanWriteComment, int payType, List<string> canShowButtons)
{
    string submitUrlCancel = url.Action("CancelAuthOrder", "Order", new {order = orderId});
    string commentUrl = url.Action("Section", "Comment", new { section = 0, hotel = hotelId, order = orderId });
    //string payUrl = url.RouteUrl("酒店预订", new { hotel = hotelId, package = packageId, checkIn = checkIn.ToString("yyyy-MM-dd"), checkOut = checkOut.ToString("yyyy-MM-dd"), contact = contact, contactPhone = contactPhone, roomCount = roomCount, note = note });

    bool isMobile = WHotelSite.Utils.IsMobile();
    
    string btnWidth = "width:25%;margin-left:0.5em;";
    if (isMobile) { btnWidth = "width:90%;"; }

    for (int i = 0; i < canShowButtons.Count; i++)
    {
        var btnType = canShowButtons[i];
        switch (btnType)
        {
            case "writecomment":
                {
                    <button type="button" class="btn btn-01-od btn-od-comment" data-comment-url="@commentUrl" style="@(btnWidth)">写点评</button>
                    break;
                }
            case "pay":
                {
                    //跳到现有支付页面 核心内容
                    if (!isMobile)
                    {
                        <button type="button" class="btn btn-01-od btn-od-pay" data-toggle="modal" data-target="#myModal" style="@(btnWidth)" onclick="bindPayOrderId(event,@orderId);">支付</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-01-od btn-od-pay" style="@(btnWidth)" onclick="gotoPayUrl2(@orderId);">支付</button>
                    }
                    break;
                }
            case "cancel":
                {
                    <button type="button" class="btn btn-01-od btn-od-cancel" data-cancel-url="@submitUrlCancel" style="@(btnWidth)">取消订单</button>
                    break;
                }
            case "delete":
                {
                    <button type="button" class="btn btn-01-od btn-od-delete" data-delete-url="@url.Action("DeleteOrder", "Order", new { order = orderId })" style="@(btnWidth)">删除订单</button>
                    break;
                }
        }
    }
}
 
