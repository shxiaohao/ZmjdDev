@functions{

    static string curVer = "";

    public static IHtmlString curAppVer()
    {
        if (curVer == "")
        {
            var cssVersion = "190001010000";
            try
            {
                var last = System.Reflection.Assembly.GetExecutingAssembly().Location;
                var lastTime = System.IO.File.GetLastWriteTime(last);
                cssVersion = lastTime.ToString("yyyyMMddhhmm");
            }
            catch (Exception ex) { }

            curVer = cssVersion;
        }
        return new HtmlString(curVer);
    }
}

@helper ShowCancelPolicy(DateTime lastCancelTime)
{
    if (DateTime.Now < lastCancelTime)
    {
        <span> @(lastCancelTime.ToString("yyyy年MM月dd日 ") + (lastCancelTime.Hour <=12 ?"上午":"") + lastCancelTime.Hour.ToString()  + (lastCancelTime.Minute == 0 ? "整" : lastCancelTime.Minute.ToString() + "分")) 之前取消预订，可无理由全额退款；过期不可取消或更改。 </span>
    }
    else
    {
        <span>订单确认之后，不可更改或取消。</span>;
    }
}

